<% if @profile %>
  
  <div class="header">
    <h3><%= @profile["first_name"] %>'s Amazing Profile</h3>
  </div>
    
  <!-- TODO- Perhaps re-jig this to fit your new design / layout -->
  <div class="my_profile">
    <div class="profile_picture">
      <img src= "https://media.licdn.com/mpr/mpr/shrinknp_200_200/p/3/005/068/304/3043d8b.jpg" alt= "Georgina Heap"/>
    </div>

  <div class="profile_details">
    <h4>My Details</h4>
    <ul>
      <li><strong>Name:</strong> <%= @profile["first_name"] %> <%= @profile["last_name"] %></li>
      <li><strong>Gender:</strong> <%= @profile["gender"] %></li>
      <li><strong>DOB:</strong> <%= @profile["dob"] %></li>
      <li><strong>Employment Status:</strong> <%= @profile["employment_status"] %></li>
      <li><strong>Phone Number:</strong> <%= @profile["phone_number"] %></li>
      <li><strong>Twitter:</strong> georgeheap</li>
      <li><strong>Github:</strong> <%= @profile["github"] %></li>
      <li><strong>Codecademy:</strong> georgeheap</li>
      <li><strong>Web Track Completedness:</strong> 100%</li>
      <li><strong>JS Track Completedness:</strong> 100%</li>
      <li><strong>Ruby Track Completedness:</strong> 100%</li>
      <li><strong>About:</strong> <%= @profile["about"] %></li>
    </ul>
  </div>
  
  <% @profile.each do |key, value| %>
    <%= puts key %>
    <%= puts value %>
  <% end %>

  <div id="stats" class="box">
    <h3>Stats</h3>
    <!-- TODO - Set the contents of this span with JavaScript -->
    <span id="word-count">0</span> words found.
  </div>

  <div id="problems" class="box">
    <h3>Programming Problems</h3>
    <a href="/primes">My Prime Number Solution</a>
  </div>

  <div class="box">
    <h3>Edit Profile</h3>

    <form action="/update" method="POST">
      <fieldset>
        <div class="form-group">
          <label for="trainee[first_name]">First Name</label>
          <input type="text" name="trainee[first_name]" value="<%= @profile["first_name"] %>"/>
        </div>

        <div class="form-group">
          <label for="trainee[last_name]">Last Name</label>
          <input type="text" name="trainee[last_name]" value="<%= @profile["last_name"] %>"/>
        </div>

        <div class="form-group">
          <label for="trainee[gender]">Gender</label>
          <input type="text" name="trainee[gender]" value="<%= @profile["gender"] %>"/>
        </div>

        <div class="form-group">
          <label for="trainee[dob]">DOB</label>
          <input type="text" name="trainee[dob]" value="<%= @profile["dob"] %>"/>
        </div>

        <div class="form-group">
          <label for="trainee[employment_status]">Employment Status</label>
          <input type="text" name="trainee[employment_status]" value="<%= @profile["employment_status"] %>"/>
        </div>

        <div class="form-group">
          <label for="trainee[phone_number]">Phone Number</label>
          <input type="text" name="trainee[phone_number]" value="<%= @profile["phone_number"] %>"/>
        </div> 
        <div class="form-group">
          <label for="trainee[phone_number]">About</label>
          <input type="text" name="trainee[about]" value="<%= @profile["about"] %>"/>
        </div> 

        
        <input type="submit" value="Update Profile" class="btn btn-primary" />
      </fieldset>
    </form>
  </div>
  <footer id="footer">
    <img src="/images/logo.png" alt="We Got Coders"/>
  </footer>
  </div>
<% else %>
  <div class="welcome">
    <p>Welcome! Once you have updated the OAuth tokens, the link below will fetch your profile information.</p>

    <a href="/authorise">Authorise</a>
  </div>
  <div class="footer">
    <img src="/images/logo.png" alt="We Got Coders"/>
  </div>
<% end %>


<!-- Add your Javascript to this script tag -->
<script language="javascript">
  console.log("I am Javascript!");

  var profile_values = document.getElementsByClassName('profile-value');
  var total_words = 0;

  for (var i = 0; i < profile_values.length; i++) {
    total_words += profile_values[i].innerHTML.trim.split(/\s+/).length;

  };

  document.getElementById('word-count').innerHTML = total_words;
</script>